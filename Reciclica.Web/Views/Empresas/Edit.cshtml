@model Reciclica.Web.Empresas.Empresa

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Empresa</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" class="form-control" asp-for="Id" >
            <div class="form-group">
            <label for="Cnpj">CNPJ</label>
            <input type="text" class="form-control" asp-for="Cnpj">
        </div>
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome">
        </div>
        <div class="form-group">
            <label for="Telefone">Telefone</label>
            <input type="text" class="form-control" asp-for="Telefone">
        </div>
        <div class="form-group">
            <label for="Telefone2">Telefone</label>
            <input type="text" class="form-control" asp-for="Telefone2">
        </div>
        <div class="form-group">
            <label for="Endereco">Endereço</label>
            <input type="text" class="form-control" asp-for="Endereco">
        </div>
        <div class="form-group">
            <label for="Bairro">Bairro</label>
            <input type="text" class="form-control" asp-for="Bairro">
        </div>
        <div class="form-group">
            <label for="Cidade">Cidade</label>
            <input type="text" class="form-control" asp-for="Cidade">
        </div>
        <div class="form-group">
            <label for="Numero">Numero</label>
            <input type="text" class="form-control" asp-for="Numero">
        </div>
        <div class="form-group">
            <label for="Cep">CEP</label>
            <input type="text" class="form-control" asp-for="Cep">
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

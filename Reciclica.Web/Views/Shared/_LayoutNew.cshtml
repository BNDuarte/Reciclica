<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<title>@ViewData["Title"] - Reciclica</title>
	<meta name="description" content="Scarica gratis il nostro Template HTML/CSS GARAGE. Se avete bisogno di un design per il vostro sito web GARAGE può fare per voi. Web Domus Italia">
	<meta name="author" content="Bruno Duarte">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="~/source/bootstrap-3.3.6-dist/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="~/source/font-awesome-4.5.0/css/font-awesome.css">
	<link rel="stylesheet" type="text/css" href="~/style/slider.css">
	<link rel="stylesheet" type="text/css" href="~/style/mystyle.css">
</head>
<body> 
<div class="wrapper">
	<header>
		<div class="allcontain">
			<nav class="topnavbar navbar-default topnav header-top">
				<div class="container">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed toggle-costume" data-toggle="collapse" data-target="#upmenu" aria-expanded="false">
							<span class="sr-only"> Toggle navigaion</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand logo"><img src="~/images/reciclica.png" class="img-responsive img-center" alt="logo" style="width: 100px;"></a>
					</div>	 
				</div>
				
				<div class="collapse navbar-collapse col-md-offset-5" id="upmenu">
					<ul class="nav navbar-nav" id="navbarontop">
						<li class="active"><a asp-area="" asp-controller="Home" asp-action="About">Quem Somos</a> </li>
						<li>
							<a href="contact.html">Contato</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</header>
	<div class="row">
		<div class=" col-md-12  background-pesquisa">

			<div class="row padding-top-150">
				<p>Encontre os Pontos de Reciclagem <br> da sua Região!</p>
			</div>	
			<div class="row">
				<form asp-controller="Home" asp-action="Pesquisa" method="get" class="center-busca col-md-12">
					<div class="input-group pesquisa">
						<img src="~/images/busca.jpg" width="35px" height="32px">
						<input name="searchString" id="searchString" placeholder="Digite o material..." type="text"/>
						<button type="submit" id="btnBusca">Buscar</button>
					</div>
				</form>
			</div>	

		</div>
	</div>	

	<div class="content">
		@RenderBody()
	</div>
	<hr/>
	<footer class="main-footer">
		<div class="container">
		<strong>Copyright &copy; 2017. Bruno Duarte</strong> All rights
		reserved.
		</div>
	</footer>
</div>
<script type="text/javascript" src="~/source/bootstrap-3.3.6-dist/js/jquery.js"></script>
<script type="text/javascript" src="~/source/js/isotope.js"></script>
<script type="text/javascript" src="~/source/js/myscript.js"></script> 
<script type="text/javascript" src="~/source/bootstrap-3.3.6-dist/js/jquery.1.11.js"></script>
<script type="text/javascript" src="~/source/bootstrap-3.3.6-dist/js/bootstrap.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
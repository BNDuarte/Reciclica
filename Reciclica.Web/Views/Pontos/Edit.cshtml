@model Reciclica.Web.Pontos.Ponto

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Empresa</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" class="form-control" asp-for="Id" >
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("EmpresaId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
                @Html.DropDownList("MaterialId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Logradouro">Logradouro</label>
            <input type="text" class="form-control" asp-for="Logradouro">
        </div>
        <div class="form-group">
            <label for="Bairro">Bairro</label>
            <input type="text" class="form-control" asp-for="Bairro">
        </div>
        <div class="form-group">
            <label for="Cidade">Cidade</label>
            <input type="text" class="form-control" asp-for="Cidade">
        </div>
       
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

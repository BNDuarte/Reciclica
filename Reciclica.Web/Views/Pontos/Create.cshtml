@model Reciclica.Web.Pontos.Ponto
@{
    ViewData["Title"] = "Empresa";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Empresa</h3>
        <a href="/Pontos" class="btn btn-primary">Back</a>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form asp-action="Create" asp-controller="Pontos" method="POST">
        <input type="hidden" asp-for="Id">

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("EmpresaId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
                @Html.DropDownList("MaterialId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Logradouro">Logradouro</label>
            <input type="text" class="form-control" asp-for="Logradouro">
        </div>
        <div class="form-group">
            <label for="Bairro">Bairro</label>
            <input type="text" class="form-control" asp-for="Bairro">
        </div>
        <div class="form-group">
            <label for="Cidade">Cidade</label>
            <input type="text" class="form-control" asp-for="Cidade">
        </div>
       
        <button type="submit" class="btn btn-default">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}





@model IEnumerable<Reciclica.Web.Pontos.Ponto>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Resultado Pesquisa";
}
<div class="row">
    <div class="col-md-12">
        <h3>Resultado de Pesquisa para: @ViewBag.Material</h3>
    </div>
</div>
<hr/>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 resultado" style="background-color:#8fb53c">
            <p class="resultado-empresa"><spam>Empresa:</spam><a id="empresa" data-id="@item.Empresa.Id">@Html.DisplayFor(modelItem => item.Empresa.Nome)</a></p>
            <p><spam>Telefone:</spam> @Html.DisplayFor(modelItem => item.Empresa.Telefone)</p>
            <p><spam>Endere√ßo de Coleta:</spam> @Html.DisplayFor(modelItem => item.Logradouro)</p>
        </div>
    }
</div>

<div class="modal" id="modal">
</div>

@section scripts{
    <script>
        $(function () {
            $("#empresa").click(function () {
                var id = $(this).attr("data-id");
                var url = "/Empresas/Details/" + id;
                $("#modal").load(url, function () {
                    $("#modal").modal();
                })
                //$.get(url, function (data) {
                //     $("#modal").modal();
                //});
            });
        })
    </script>
}


